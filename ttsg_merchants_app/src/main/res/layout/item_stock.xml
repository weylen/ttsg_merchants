<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GenericItem" android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1.0"
        >

        <TextView
            android:id="@+id/orderContentView"
            style="@style/ContentTextView"
            android:text="矿泉水 x1"
            android:textColor="@color/grayText"
            android:lineSpacingExtra="1dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/SmallTextView"
                android:text="单价："
                android:textColor="@color/grayText"
                />

            <TextView
                android:id="@+id/orderPriceView"
                style="@style/ContentTextView"
                android:text="￥14.88"
                android:textColor="@color/blackText"
                />
        </LinearLayout>

    </LinearLayout>


    <TextView
        style="@style/TitleTextView"
        android:text="库存"
        android:textColor="@color/grayText"
        android:textSize="@dimen/size_12"
        />

    <EditText
        android:id="@+id/text_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="50dp"
        android:background="@drawable/abc_border_btn"
        android:layout_marginLeft="5dp"
        android:textSize="@dimen/size_16"
        android:textStyle="bold"
        android:padding="5dp"
        android:gravity="center"
        android:inputType="number"
        />

</LinearLayout>