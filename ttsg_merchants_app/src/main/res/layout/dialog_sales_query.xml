<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="24dp"
    android:background="@color/white"
    >

    <TextView
        style="@style/ContentTextView"
        android:text="通用时间段"
        android:textColor="@color/blackText"
        />

    <RadioGroup
        android:id="@+id/generic_time_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        >

        <RadioButton
            android:id="@+id/radio_today"
            style="@style/Dialog_Radio"
            android:text="今天"
            />

        <RadioButton
            android:id="@+id/radio_month"
            style="@style/Dialog_Radio"
            android:text="本月"
            android:layout_marginLeft="@dimen/dp_22"
            />

        <RadioButton
            android:id="@+id/radio_year"
            style="@style/Dialog_Radio"
            android:text="今年"
            android:layout_marginLeft="@dimen/dp_22"
            />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divider"
        />

    <TextView
        style="@style/ContentTextView"
        android:text="自定义时间段"
        android:textColor="@color/blackText"
        android:layout_marginTop="@dimen/dp_10"
        />

    <RadioGroup
        android:id="@+id/custom_time_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        >

        <RadioButton
            android:id="@+id/radio_startTime"
            style="@style/Dialog_Radio"
            android:hint="开始时间"
            android:drawableRight="@mipmap/icon_arrow_down_10"
            />

        <RadioButton
            android:id="@+id/radio_endTime"
            style="@style/Dialog_Radio"
            android:hint="结束时间"
            android:layout_marginLeft="@dimen/dp_22"
            android:drawableRight="@mipmap/icon_arrow_down_10"
            />

    </RadioGroup>

</LinearLayout>