<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/img_nav_header_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.0"
            android:paddingTop="20dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/text_shop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_18"
                    android:textColor="@color/white"
                    android:drawableTop="@mipmap/icon_user_m"
                    android:gravity="center"
                    android:lines="1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="5dp"
                        android:text="营业状态："
                        />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:drawableRight="@mipmap/icon_arrow_r_w"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="5dp"
                        android:text="设置营业状态"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="10dp"
                        android:text="营业时间："
                        />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:drawableRight="@mipmap/icon_arrow_r_w"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="10dp"
                        android:text="设置营业时间"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="10dp"
                        android:text="直营时间："
                        />

                    <TextView
                        android:id="@+id/nightTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:drawableRight="@mipmap/icon_arrow_r_w"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="10dp"
                        android:text="设置直营时间"
                        />

                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/btn_withdrawal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现"
                    android:textColor="@color/white"
                    android:layout_gravity="right"
                    android:background="@drawable/abc_themecolor_fill_btn"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/text_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/img_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_small_refresh"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/text_balance"
                    android:layout_centerVertical="true"
                    />


            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
