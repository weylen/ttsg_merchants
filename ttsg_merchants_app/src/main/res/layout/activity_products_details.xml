<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.strangedog.weylen.mthc.ProductsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="scroll|enterAlways"
            />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:src="@mipmap/img_load_default"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                >

                <com.rey.material.widget.EditText
                    android:id="@+id/itemProductsName"
                    style="@style/LightEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="商品名"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="老坛酸菜牛肉面"
                    android:textColor="@color/blackText"
                    android:textSize="@dimen/size_16"
                    android:layout_marginTop="10dp"
                    app:et_labelPadding="5dp"
                    />

                <com.rey.material.widget.EditText
                    android:id="@+id/itemPrice"
                    style="@style/LightEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="价格"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="￥6.5"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/size_16"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    app:et_labelPadding="5dp"

                    />

                <com.rey.material.widget.EditText
                    android:id="@+id/itemInventory"
                    style="@style/LightEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="库存"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="20"
                    android:textColor="@color/grayText"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="10dp"
                    app:et_labelPadding="5dp"
                    />

                <com.rey.material.widget.EditText
                    android:id="@+id/itemPromotion"
                    style="@style/LightEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="促销信息"
                    android:inputType="text"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/grayText"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="10dp"
                    app:et_labelPadding="5dp"
                    />

                <com.rey.material.widget.EditText
                    android:id="@+id/itemPromotionPrice"
                    style="@style/LightEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="促销价格"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/redText"
                    android:textSize="@dimen/size_14"
                    android:layout_marginTop="10dp"
                    app:et_labelPadding="5dp"
                    />

                <FrameLayout
                    android:id="@+id/itemWrapStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >
                    <com.rey.material.widget.EditText
                        android:id="@+id/itemPromotionStart"
                        style="@style/LightEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="促销开始时间"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/grayText"
                        android:textSize="@dimen/size_14"
                        android:layout_marginTop="10dp"
                        app:et_labelPadding="5dp"
                        />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/itemWrapEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <com.rey.material.widget.EditText
                        android:id="@+id/itemPromotionEnd"
                        style="@style/LightEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="促销结束时间"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColor="@color/grayText"
                        android:textSize="@dimen/size_14"
                        android:layout_marginTop="10dp"
                        app:et_labelPadding="5dp"
                        />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
