<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/item_padding_horizontal"
    android:paddingRight="@dimen/item_padding_horizontal"
    android:paddingTop="@dimen/item_padding_vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/itemImage"
            style="@style/Generic_ImageView"
            android:src="@mipmap/img_default"
            android:layout_gravity="center_horizontal"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/item_padding_horizontal"
            >

            <TextView
                android:id="@+id/itemTitle"
                style="@style/ContentTextView"
                android:text="康师傅红烧牛肉面(桶)"
                android:textColor="@color/grayText"
                android:layout_marginTop="2dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                >

                <TextView
                    style="@style/ContentTextView"
                    android:text="￥"
                    android:textColor="@color/grayText"
                    />

                <TextView
                    android:id="@+id/salesLinesView"
                    style="@style/TitleTextView"
                    android:text="4.00"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_weight="1.0"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/itemPromotion"
                style="@style/SmallTextView"
                android:text="今天限时促销￥3.00"
                android:textColor="@color/themeColor"
                android:layout_marginTop="3dp"
                />
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/divider"
        android:layout_marginTop="@dimen/item_padding_vertical"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        >

        <com.rey.material.widget.TextView
            android:id="@+id/action_edit"
            style="@style/SmallTextView"
            android:text="编辑"
            android:gravity="center"
            android:paddingLeft="@dimen/item_padding_horizontal"
            android:paddingRight="@dimen/item_padding_horizontal"
            android:paddingTop="@dimen/item_padding_vertical"
            android:paddingBottom="@dimen/item_padding_vertical"
            android:background="@drawable/abc_generic_pressed"
            android:textColor="@color/text_color_selector"
            />

        <com.rey.material.widget.TextView
            android:id="@+id/action_shelves"
            style="@style/SmallTextView"
            android:text="下架"
            android:paddingLeft="@dimen/item_padding_horizontal"
            android:paddingRight="@dimen/item_padding_horizontal"
            android:paddingTop="@dimen/item_padding_vertical"
            android:paddingBottom="@dimen/item_padding_vertical"
            android:background="@drawable/abc_generic_pressed"
            android:textColor="@color/text_color_selector"
            />

    </LinearLayout>
</LinearLayout>
